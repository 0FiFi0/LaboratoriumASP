@{
}
<h1>Edytuj zdjęcie</h1>
<form asp-controller="Photo" asp-action="Update" method="post">
    <input asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="Author">Autor</label>
        <input class="form_control" asp-for="Author" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description">Opis</label>
        <input class="form_control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Camera">Aparat</label>
        <input class="form_control" asp-for="Camera" />
        <span class="text-danger" asp-validation-for="Camera"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Resolution">Rozdzielczość</label>
        <input class="form_control" asp-for="Resolution" />
        <span class="text-danger" asp-validation-for="Resolution"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Format">Format</label>
        <input class="form_control" asp-for="Format" />
        <span class="text-danger" asp-validation-for="Format"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateAndTime">Data i czas</label>
        <input class="form_control" asp-for="DateAndTime" />
        <span class="text-danger" asp-validation-for="DateAndTime"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz zmiany</button>
    </div>
</form>
<form asp-action="Index">
    <button class="btn btn-danger" type="submit">Powrót</button>
</form>
